# ============================================
# FleetCtrl Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values

############
# Convex
############
# Get these from your Convex dashboard: https://dashboard.convex.dev
CONVEX_DEPLOYMENT=dev:your-deployment-name
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud
# Same as NEXT_PUBLIC_CONVEX_URL but ends in .site
NEXT_PUBLIC_CONVEX_SITE_URL=https://your-deployment.convex.site

############
# Site URL
############
# Your local site URL (or production URL)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

############
# Optional: Production Deployment
############
# Only needed for production deployments
# CONVEX_DEPLOY_KEY=prod:your-deploy-key

############
# Convex Environment Variables (set via npx convex env set)
############
# Run these commands to set environment variables in Convex:
#   npx convex env set BETTER_AUTH_SECRET=$(openssl rand -base64 32)
#   npx convex env set SITE_URL http://localhost:3000
